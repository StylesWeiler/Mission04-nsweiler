@model GraderModel;

<!--• A "Grade Calculator" form that takes as input a percentage scored for each grade-->
<!--category listed in the syllabus-->
<h4>Grade Calculator</h4>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments" /> <br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes" /> <br />
    <label>Group Projects:</label>
    <input id="groupprojects" asp-for="groupprojects" /> <br />
    <label>INTEX:</label>
    <input id="intex" asp-for="intex" /> <br />
    <label>Exams:</label>
    <input id="exams" asp-for="exams" /> <br />
    <input type="submit" id="buttonSubmit" value="Submit" />
    <br /><br />
    <!-- Output of the letter and percent grades -->
    <span id="lettergrade"></span>
    <br />
    <span id="percentgrade"></span>

    <div asp-validation-summary="All"></div>
</form>

<!-- Import the javascript file called grader.js and the jQuery file  -->
<script src="~/js/grader.js"></script>


